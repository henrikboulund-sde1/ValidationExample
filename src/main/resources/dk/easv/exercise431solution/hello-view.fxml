<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="247.0" prefWidth="355.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.exercise431solution.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Name:" />
   <TextField fx:id="txtName" />
   <Label fx:id="welcomeText1" layoutX="30.0" layoutY="30.0" text="Age:">
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
   </Label>
   <TextField fx:id="txtAge" layoutX="30.0" layoutY="47.0" />
   <Button fx:id="btnValidate" mnemonicParsing="false" onAction="#onBtnValidate" text="Validate">
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
   </Button>
   <Label fx:id="lblValidationText" text="ValidText" textFill="#169e4c" visible="false">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Label>
</VBox>
